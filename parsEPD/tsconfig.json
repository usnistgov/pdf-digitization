{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react-jsx",
		"noEmit": true,
		"strict": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src"]
}
